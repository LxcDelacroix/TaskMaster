{% extends 'base.html.twig' %}


{% block title %}{{"LogIn"|trans}}{% endblock %}

{% block body %}
{% include 'includes/navbar.html.twig' %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="mt-5">
                {% if error %}
                    <div class="alert alert-danger">{{"ErrorLogIn"|trans}}</div>
                {% endif %}

                <h1 class="h3 font-weight-normal text-center mb-5">{{"LogIn"|trans}}</h1>
                <div class="form-group mb-3">
                    <label class="mb-1" for="inputUsername">{{"Id"|trans}}</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                </div>
                <div class="form-group mb-3">
                    <label class="mb-1" for="inputPassword">{{"Password"|trans}}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    {{"LogIn"|trans}}
                </button>
            </form>
        </div>
    </div>
</div>
{% include 'includes/footer.html.twig' %}
{% endblock %}
